<header class="header">
  <div>
    <p class="uppercase font-semibold">Light</p>
  </div>

  <ul class="nav">
    <a href="" class="px-4 py-2 w-full md:w-auto">
      <li class="hover:text-[#C824EC] transition-colors duration-150">Home</li>
    </a>
    <a href="" class="px-4 py-2 w-full md:w-auto">
      <li class="hover:text-[#C824EC] transition-colors duration-150">
        Company
      </li>
    </a>
    <a href="" class="px-4 py-2 w-full md:w-auto">
      <li class="hover:text-[#C824EC] transition-colors duration-150">
        Factures
      </li>
    </a>
    <a
      href=""
      class="w-full md:w-auto bg-gradient-to-l from-[#C54B8C] to-[#BC3CD8] px-6 py-3 font-bold rounded-md transition-colors duration-150 hover:opacity-80"
    >
      <li class="">Sing Up</li>
    </a>
  </ul>
  <div class="container-bnt-menu">
    <div class="btn-menu">
      <span class="linea-menu" id="linea1"></span>
      <span class="linea-menu" id="linea2"></span>
      <span class="linea-menu" id="linea3"></span>
    </div>
  </div>
  <div class="menu-drop"></div>
</header>

<style>
  .nav {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #f6f6f9;
  }
  .container-bnt-menu {
    display: none;
    padding: 0;
  }
  .menu-drop{
    position: absolute;
    display: none;

  }

  .header {
    position: relative;
    height: 80px;
    width: 100%;
    padding: 20px 20px;
    color: #f6f6f9;
    display: flex;
    justify-content: space-between;
    justify-items: center;
  }
  @media (max-width: 768px) {
    .header {
      position: fixed;
      display: flex;
      justify-items: center;
      justify-content: space-between;
      top: 0;
      left: 0;
      z-index: 100;
    }
    .nav {
      position: fixed;
      flex-direction: column;
      gap: 30px;
      background: rgba(170, 20, 240, 0.25);
      -webkit-backdrop-filter: blur(2px);
      backdrop-filter: blur(2px);
      width: 250px;
      height: 100%;
      left: -300px;
      top: 0;
      transition: left 0.4s ease-in-out;
      z-index: 100;
      z-index: 999;
    }
    .activelinea1__bars-menu {
      transform: rotate(40deg) translate(-2px, 1px);
    }
    .activelinea2__bars-menu {
      opacity: 0;
      margin-left: -30px;
    }
    .activelinea3__bars-menu {
      transform: rotate(-40deg) translate(-2px, 1px);
    }
    .menu-activado {
      left: 0px;
      transition: left 0.4s ease-in-out;
    }
    .menu-drop {
      top: 0;
      left: 0;
      position: fixed;
      height: 100vh;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 100;
      display: none;
    }
    .activa-menu-drop {
      display: block;
      transition: 0.5s display;
    }

    .linea-menu {
      display: block;
      position: relative;
      height: 2px;
      width: 40px;
      background-color: #f6f6f9;
      top: -5px;
      margin-top: 10px;
      cursor: pointer;
      transform-origin: 0px 100%;
      transition: all 0.4s;
    }
    .container-bnt-menu {
      position: relative;
      padding: 0px 20px;
      display: block;
      z-index: 9999;
    }
  }
</style>

<script>
  const $menu = document.querySelector(".nav");
  const $menuDrop = document.querySelector(".menu-drop");
  const $btnmenu = document.querySelector(".btn-menu");
  const $linea1 = document.querySelector("#linea1");
  const $linea2 = document.querySelector("#linea2");
  const $linea3 = document.querySelector("#linea3");
  $btnmenu.addEventListener("click", () => {
    $linea1.classList.toggle("activelinea1__bars-menu");
    $linea2.classList.toggle("activelinea2__bars-menu");
    $linea3.classList.toggle("activelinea3__bars-menu");
    $menu.classList.toggle("menu-activado");
    $menuDrop.classList.toggle("activa-menu-drop");
  });

  $menuDrop.addEventListener("click", () => {
    $linea1.classList.toggle("activelinea1__bars-menu");
    $linea2.classList.toggle("activelinea2__bars-menu");
    $linea3.classList.toggle("activelinea3__bars-menu");
    $menu.classList.toggle("menu-activado");
    $menuDrop.classList.toggle("activa-menu-drop");
  });
</script>
