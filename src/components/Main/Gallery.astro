---
import Rectanquel33 from "../../img/Rectangle 33.webp";
import Rectanquel34 from "../../img/Rectangle 34.webp";
import Rectanquel35 from "../../img/Rectangle 35.webp";
import Rectanquel36 from "../../img/Rectangle 36.webp";
import ItemGallery from "./ItemGallery.astro";
---

<section class="relative bg-[#010208] text-white px-3 lg:px-12">
  <div class="relative z-10">
    <h2 class="text-3xl capitalize font-bold pt-11 text-start lg:text-center md:text-4xl">
      Mix reality headsets
    </h2>
  </div>
  <div class="relative z-10">
    <ul
      class="flex flex-col justify-between justify-items-center overflow-hidden gap-3 py-8 flex-wrap  sm:flex-row lg:gap-7"
    >
      <ItemGallery
        img={Rectanquel33}
        description="A network of 3D virtual world focused on social connection"
        title="Metaveso"
      />
      <ItemGallery
        img={Rectanquel34}
        title="Aiot"
        description="Al and lot both emerging inovative tecnologies with a lot of potentials."
      />
      <ItemGallery
        img={Rectanquel35}
        title="HoloLens"
        description="HoloLens display information blend with the real world, or even simulate a virtual world."
      />
      <ItemGallery
        img={Rectanquel36}
        title="TPCASSTT"
        description="method is gread to start students reading and inferring with little assistance from the instructor"
      />
    </ul>
  </div>
  <div
    class="absolute left-0 top-0 w-[100%] h-[100%] bg-gradient-to-t from-[#AA14F050] via-transparent to-transparent"
  >
  </div>
</section>
