---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Header/Nav.astro";
import Main from "../components/Main/Main.astro";
---

<Layout title="Welcome to Astro.">
  <div
    class="bg-gradient-to-b from-[#010208] via-[#010208] to-[#010208] h-screen"
  >
    <div
      class="absolute left-0 top-0 w-[50%] h-[40%] bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-[#AA14F050] via-transparent to-transparent"
    >
    </div>

    <div
      class="absolute left-0 bottom-0 w-[50%] h-[40%] bg-gradient-to-tr from-[#AA14F050] via-transparent to-transparent"
    >
    </div>

    <div
      class="absolute right-0 bottom-0 w-[50%] h-[40%] bg-gradient-to-tl from-[#AA14F050] via-transparent to-transparent"
    >
    </div>
    <Nav />
    <Main />
  </div>
</Layout>
